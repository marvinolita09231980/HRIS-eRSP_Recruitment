<section ng-app="ng_eRSP_App" ng-controller="cAddPanelRole_Ctrlr">
    <!-- The modal -->
    <div class="modal fade" id="addPanelRoleInfo" tabindex="-1" role="dialog" aria-labelledby="modalLabelSmall" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-md">
            <div class="modal-content animated flipInY with-background">
                <div class="modal-header modal-header-add-edit text-white">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <center><h2 class="modal-title" id="modalLabelSmall"><b>Edit Panel Role
                    </b></h2></center>
                </div>
                <form id="mr" ng-model="mr" novalidate>
                    <div class="modal-footer m-top-n20">
                        <div class="row no-padding" style="margin-top:-10px!important;">
                            <div class="col-lg-12 tabs-container m-b-md">

                                <div class="row m-top-10">
                                    <div class="col-sm-12">
                                        <div style="float:left;">
                                            <span class="pull-left font-bold" style="margin-top:9px;margin-right:10px;"><b>Role ID:</b></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 dt-hdr-rw">
                                        <div class="" style=" margin-bottom:25px!important;">
                                            <input type="text" id="psb_mbr_role" ng-model="mr.psb_mbr_role" class="form-control text-left norequired" disabled required />
                                        </div>
                                    </div>
                                </div>
                                <div class="row m-top-10">
                                    <div class="col-sm-12">
                                        <div style="float:left;">
                                            <span class="pull-left font-bold" style="margin-top:9px;margin-right:10px;"><b>Role Description:</b></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 dt-hdr-rw">
                                        <div style="margin-bottom:25px!important;">
                                            <input type="text" id="mbr_role_descr" ng-model="mr.mbr_role_descr" class="form-control text-left norequired" required />
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer detail">
                        <div class="row" style="padding-top:5px;">
                            <div class="col-sm-6 pull-right">
                                <center>
                                    <button ng-show="!edit" class=" btn btn-success font-bold pull-right m-right-10" ng-click="SavePanelRole(mr)">
                                        Save&nbsp;<i class="fa fa-save"></i>
                                    </button>
                                    <button ng-show="edit" class=" btn btn-success font-bold pull-right m-right-10" ng-click="EditPanelRole(mr)">
                                        Edit&nbsp;<i class="fa fa-save"></i>
                                    </button>
                                    <button class=" btn btn-danger font-bold pull-right m-right-10" data-dismiss="modal">
                                        Close&nbsp;<i class="fa fa-close"></i>
                                    </button>
                                </center>
                            </div>

                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="row wrapper border-bottom white-bg page-heading" style="background-color:#507CD1">
                <div class="col-lg-4">
                    <h2 class="text-white"><b>EDIT PANEL ROLES</b></h2>

                </div>
                <div class="col-lg-6" style="margin-top:12px;">
