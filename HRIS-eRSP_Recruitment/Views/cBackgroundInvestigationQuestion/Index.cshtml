
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Angular/ng-cBackGroundInvestigationQuestion.js"></script>
<section ng-app="ng_eRSP_App" ng-controller="cBackgroundInvestigationQuestion_Ctrlr">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Add Background Investigation Question</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-12 b-r">
                                <h3 class="m-t-none m-b">Sign in</h3>

                                <form role="form" id="question" novalidate>
                                    <div class="form-group">
                                        <label>Background Investigation Type</label>
                                        <select class="form-control m-b" id="question_type" ng-model="question_type" ng-click="selectQuestion_type()" required include>
                                            <option value="" selected>Select Type</option>
                                            <option value="1">BACKGROUND INVESTIGATION FOR EXISTING EMPLOYEES</option>
                                            <option value="2">BACKGROUND INVESTIGATION (WORK PERFORMANCE AND INTER-PERSONAL RELATIONSHIP)</option>
                                            <option value="3">BACKGROUND INVESTIGATION (COMMUNITY AND CIVIC INVOLVEMENT)</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Criteria 1</label>
                                        <select class="form-control m-b" id="criteria1_id" ng-model="criteria1_id" ng-click="selectCriteria1_id()" required include>
                                            <option value="" selected>Select Criteria 1</option>
                                            <option ng-repeat="lst in bi_criteria1_tbl1" value="{{lst.criteria1_id}}">{{lst.criteria1_descr}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Criteria 2</label>
                                        <select class="form-control m-b" id="criteria2_id" ng-model="criteria2_id" ng-click="selectCriteria2_id()" include>
                                            <option value="" selected>Select Criteria 2</option>
                                            <option ng-repeat="lst in bi_criteria2_tbl2" value="{{lst.criteria2_id}}">{{lst.criteria2_descr}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Criteria 3</label>
                                        <select class="form-control m-b" id="criteria3_id" ng-model="criteria3_id" ng-click="selectCriteria3_id()" include>
                                            <option value="" selected>Select Criteria 3</option>
                                            <option ng-repeat="lst in bi_criteria3_tbl3" value="{{lst.criteria3_id}}">{{lst.criteria3_descr}}</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Question</label>
                                        <input type="text" id="question_descr" ng-model="question_descr" placeholder="Type you question here" class="form-control" required include>
                                    </div>
                                    <div class="form-group">
                                        <label>Rating Scale</label>
                                        <input type="number" id="rating_scale" ng-model="rating_scale"  placeholder="Specify rating scale here..." class="form-control" required include>
                                    </div>
                                    <div class="form-group">
                                        <label>Item Order</label>
                                        <input type="number" id="order_by" ng-model="order_by"   placeholder="Specify where on the list this question is placed." class="form-control" required include>
                                    </div>
                                    <div class="m-t-lg">
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" ng-click="saveQuestion()"><strong>Save</strong></button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight m-t-n-xl">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Background Investigation Question Table</h5>
                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table id="question_grid" class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Questions</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                              
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
      
    </div>
</section>

<script>
    const textInput = document.getElementsByClassName('leftratinginput');

    textInput.addEventListener('keyup', function () {
        if (this.value.length > 100) {
            this.value = this.value.slice(0, 100);
        }
    });

</script>





